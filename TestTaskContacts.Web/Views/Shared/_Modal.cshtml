@model TestTaskContacts.VeiwModels.Models.ContactViewModel
@{
    Layout = "";
}


<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="modalTitle"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div id="modalBody">
                <div>
                    <form id="modalForm" class="d-flex flex-column">
                        <div class="form-group d-flex flex-column p-2" style="display: none !important;">
                            <label asp-for="Id" class="control-label" hidden></label>
                            <input asp-for="Id" id="id" name="id" class="form-control" hidden />
                        </div>
                        <div class="form-group d-flex flex-column p-2">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" id="name" name="name" class="form-control" />
                        </div>
                        <div class="form-group d-flex flex-column p-2">
                            <label asp-for="Phone" class="control-label">Phone</label>
                            <input asp-for="Phone" id="phone" name="phone" class="form-control" />
                        </div>
                        <div class="form-group d-flex flex-column p-2">
                            <label asp-for="JobTitle" class="control-label">Job Title</label>
                            <input asp-for="JobTitle" id="jobTitle" name="jobTitle" class="form-control" />
                        </div>
                        <div class="form-group d-flex flex-column p-2">
                            <label asp-for="BirthDate" class="control-label">Birth Date</label>
                            <input asp-for="BirthDate" type="date" id="birthDate" name="birthDate" class="form-control" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button id="modalSubmit" form="modalForm" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>