@model IEnumerable<TestTaskContacts.VeiwModels.Models.ContactViewModel>

<table class="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td id="@contact.Id" hidden>
                    @Html.DisplayFor(modelItem => contact.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.BirthDate)
                </td>
                @{
                    var updateId = contact.Id + "update";
                    var detailsId = contact.Id + "details";
                    var deleteId = contact.Id + "delete";
                }
                <td>
                    <button type="button" id="@updateId" class="btn btn-primary updateButton">
                        Update
                    </button>
                    <button type="button" id="@detailsId" class="btn btn-primary detailsButton">
                        Details
                    </button>
                    <button type="button" id="@deleteId" class="btn btn-primary deleteButton">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/listActions.js"></script>
